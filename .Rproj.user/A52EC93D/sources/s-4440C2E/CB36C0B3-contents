library(shiny)
library(shinydashboard)
library(shinyDND)
library(magick)


dashboardPage(
  skin = "purple",
  
  dashboardHeader(title = "Montage photos"),
  dashboardSidebar(disable = TRUE),
  dashboardBody(
    tags$head(
      tags$link(rel = "stylesheet", type = "text/css", href = "style.css")
    ),
    sidebarLayout(
      sidebarPanel(
        # Input: Select a file ----
        fileInput("img1", "Choose image",
                  multiple = TRUE,
                  accept = c(".jpg",
                             ".jpeg",
                             ".png",
                             ".gif"))
      ),
      mainPanel(
        textOutput("img1")
        
        
      )
    )
  )
)
